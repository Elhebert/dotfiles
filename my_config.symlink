# Alias

alias composer='php ${HOME}/Workspace/bin/composer/composer'
alias node-dev='NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=0 node'
alias fuck='thefuck'

# Node - nvm
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# Teamocil Autocompletion in zsh
compctl -g '~/.teamocil/*(:t:r)' teamocil

# tshark on remote host
function t2w {
	HOST=$1 shift;
	ssh $HOST tshark $@ -w - | wireshark -k -i -
}

# Code
code () {
	VSCODE_CWD="$PWD" open -n -b "com.microsoft.VSCode" --args $* ;
}
